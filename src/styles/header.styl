$text-color = #ecf0f1
$background-color =rgb(85, 95, 99)
$border-radius = 8px
$transition-speed = 0.3s
$primary-color = #333
$secondary-color =rgb(53, 45, 45)
$hover-color = #007bff
$light-gray = LightGray
$gray = gray
$yellow = yellow
$black = black
.img
  
flex-center()
  display: flex
  justify-content: center
  align-items: center

hover-effect()
  transition: all 0.3s ease
  &:hover
    transform: scale(1.05)
    opacity: 0.9

a
  text-decoration: none
  color: $black
  hover-effect()

body
  background-color: rgb(141, 156, 162)

.img-building {
    display: block
    margin: 10px auto;
}

table
  border: 2px solid #000
  cellpadding: 5
  width: 100%
  border-collapse: collapse

  thead
    tr
      background-color: #f2f2f2

    th
      padding: 10px 
      text-align: left 

  tbody
    tr
      &:nth-child(even)
        background-color:rgb(100, 89, 89) 

      td
        padding: 8px 
        border: 1px solid #ddd 

.building {
  width: 90%
  background-color: $background-color
  padding: 10px 0
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1)
  border-radius: $border-radius
  margin: 10px auto
}

.menu
  width: 100%
  background-color: $background-color
  padding: 10px 0
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1)
  border-radius: $border-radius

  &__name
    display: block
    margin: 10px auto
    a
      color: $text-color
      font-size: 1.2em
      font-weight: bold
      text-decoration: none
      hover-effect()

  &__list
    display: flex
    justify-content: space-evenly
    align-items: center
    margin: 0
    padding: 0

  &__list-item
    margin: 5px
    position: relative

    &_current
      a
        color: $secondary-color
        font-weight: bold

    a
      color: $text-color
      text-decoration: none
      padding: 8px 12px
      border-radius: $border-radius
      hover-effect()

      &:hover
        background-color: $secondary-color
        color: white

    &::after
      content: ''
      position: absolute
      bottom: -5px
      left: 50%
      width: 0
      height: 2px
      background-color: $secondary-color
      transition: width $transition-speed ease, left $transition-speed ease

    &:hover::after
      width: 100%
      left: 0

.gallery
  width: 95%
  height: 200px
  margin: 5px auto
  display: flex
  background-color: $background-color
  padding: 10px 0
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1)
  border-radius: $border-radius

  &__item
    margin: 3px
    width: 24%
    height: 90%
    border-radius: $border-radius
    overflow hidden

    &_even
      margin: 10px 3px
      width: 24%
      height: 90%

    img
      width: 100%
      height: 100%
      hover-effect()

.main
  display: flex
  justify-content: space-evenly
  width: 80%
  margin: 5px auto
  background-color: $background-color
  padding: 10px 0
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1)
  border-radius: $border-radius

  &__block
    width: 30%
    display: flex
    justify-content: center
    flex-direction: column
    align-items: center

  &__block-img
    border-radius: 100%
    width: 120px
    height: 120px
    overflow: hidden
    margin: 10px

    img
      width: 120px
      height: 120px
      hover-effect()

  &__block-text
      width: 100%
      text-align: center

.article
  width: 90%
  display: flex
  align-items: center
  height: 200px
  margin: 5px auto
  background-color: $background-color
  padding: 10px 0
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1)
  border-radius: $border-radius

  &__img
    height: 100%
    width: 35%
    border-radius: $border-radius
    overflow hidden

    img
      width: 100%
      height: 100%
      hover-effect()

  &__text
    text-align: center
    width: 60%
    margin: 7px

    &_number2
      width: 100%

.footer
  width: 100%
  display: flex
  justify-content: space-between
  background: $gray
  margin: 10px 0
  background-color: $background-color
  padding: 10px 0
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1)
  border-radius: $border-radius
  margin: 10px auto

  &__name, &__contacts
    color: $black

@media (max-width: 800px)
  .menu
    padding: 10px

    &__name
      display: block
      text-align: center
      margin-bottom: 10px

    &__list
      flex-direction: column
      align-items: center

      &__item
        margin: 5px 0

        a
          padding: 6px 10px

  .gallery
    flex-direction: column
    width: 80%
    height: auto
    align-items: center
    margin: 3px auto

    &__item
      width: 100%

      &--even
        width: 100%

      img
        width: 100%
        height: 100%

  .main
    flex-direction: column
    align-items: center
    width: 100%
    margin: 5px auto

    &__block
      width: 100%

  .article
    flex-direction: column
    height: auto

    &__text
      width: 100%

  .footer
    flex-direction: column